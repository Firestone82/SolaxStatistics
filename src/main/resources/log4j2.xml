<configuration>
    <conversionRule conversionWord="coloredType"
                    converterClass="me.firestone82.solaxstatistics.logging.ColoredHighlightingType"/>
    <conversionRule conversionWord="coloredText"
                    converterClass="me.firestone82.solaxstatistics.logging.ColoredHighlightingText"/>

    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%white%d{yyyy-MM-dd HH:mm:ss} | %coloredType(%-5(%level)) | %cyan(%logger{10}) : %coloredText(%msg%n)
            </pattern>
            <charset>utf-8</charset>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/app.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <fileHeader>
                    -------- APPLICATION STARTED --------%n
                </fileHeader>

                <pattern>%d{yyyy‑MM‑dd HH:mm:ss} | %-5level | %logger{10} : %msg%n</pattern>
            </layout>
            <charset>utf‑8</charset>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
